<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tela__jogo__me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.algogame.appalgogame.TelaJogoME"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="34dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Jogador"
                android:gravity="start"
                android:layout_alignParentLeft="true"


                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="NÃ­vel X"
                android:layout_alignParentRight="true"

                android:textSize="25sp" />


        </RelativeLayout>


        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="60"
            android:id="@+id/barraProgresso"
            />


        <com.mobeta.android.dslv.DragSortListView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:dslv="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            dslv:drag_handle_id="@id/drag_handle"
            dslv:float_background_color="@android:color/background_light"
            android:id="@+id/ListaPrincipalME"
            android:layout_height="420dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_weight="0.57"
        android:layout_gravity="bottom"
        >


        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            app:fabSize="auto"
            app:elevation="7dp"
            app:backgroundTint="@android:color/holo_blue_dark"
            app:srcCompat="?android:attr/textCheckMarkInverse"
            android:clickable="true"
            android:onClick="verificarCodigo" />


    </RelativeLayout>


</FrameLayout>
